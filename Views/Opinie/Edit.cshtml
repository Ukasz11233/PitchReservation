@model RezerwacjaBoiska.Models.Opinie

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Opinie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
           <div class="form-group">
                <label asp-for="Ocena" class="control-label"></label>
                <select asp-for="Ocena" class="form-control" asp-items="ViewBag.availableGrades">
                    <option value="-1">-- Wybierz Ocene --</option>
                </select>
                <span asp-validation-for="Ocena" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Komentarz" class="control-label"></label>
                <input asp-for="Komentarz" class="form-control" />
                <span asp-validation-for="Komentarz" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Autor" class="control-label"></label>
                <select asp-for="Autor" class="form-control" asp-items="ViewBag.GraczeID">
                    <option value="-1">-- Wybierz autora --</option>
                </select>
                <span asp-validation-for="Autor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Boisko" class="control-label"></label>
                <select asp-for="Boisko" class="form-control" asp-items="ViewBag.BoiskaID">
                    <option value="-1">-- Wybierz boisko --</option>
                </select>
                <span asp-validation-for="Boisko" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
