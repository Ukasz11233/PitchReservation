@model IEnumerable<RezerwacjaBoiska.Models.Boiska>

@{
    ViewData["Title"] = "Index";
}

<head>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
</head>

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nazwa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lokalizacja)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rozmiar)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nazwa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lokalizacja)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rozmiar)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<a href="/Home/Rezerwuj">Go to main panel</a>

@section Scripts {
    <script>
        // Sprawd≈∫ czy istnieje powiadomienie o nieudanym usuwaniu rekordu
        var deleteFailedMessage = '@TempData["DeleteFailed"]';
        if (deleteFailedMessage) {
            swal({
                title: "Delete Failed",
                text: deleteFailedMessage,
                icon: "error"
            });
        }
    </script>
}